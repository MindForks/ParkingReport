@model PR.EntitiesDTO.ReportDTO

@{
    ViewData["Title"] = "Edit";
}
@{
    var statuses = ((IEnumerable<SelectListItem>)ViewData["Statuses"]);
}
<center><h3>Edit report</h3></center>
<hr />
<input asp-for="Id" type="hidden" />
<div class="container">
    <div class="col-md-12">
        <div class="form-group">
            <label asp-for="CarNumber" class="control-label"></label>
            <br />
            <label> @Model.CarNumber</label>
            <br />
        </div>
        <div class="form-group">
            <label asp-for="AssignedComment" class="control-label"></label>
            <br />
            <textarea class="form-control" rows="5" disabled> @Model.AssignedComment</textarea>
            <br />
        </div>
        <div class="form-group">
            <label asp-for="StatusId" class="control-label"></label>
            <select asp-for="StatusId" asp-items="@statuses" class="form-control custom-select" type="text" autocomplete="off"></select>
            <span asp-validation-for="StatusId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CreationTime" class="control-label"></label>
            <br />
            <label>@Model.CreationTime.ToString("dd.MM.yyyy HH:mm")</label>
            <br />
        </div>

    </div>
    <br />
    <a asp-action="List" class="btn btn-dark">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
