@model IEnumerable<PR.EntitiesDTO.ReportDTO>

@{
    ViewData["Title"] = "List";
}
@{
    var statuses = ((IEnumerable<SelectListItem>)ViewData["Statuses"]);
}
<center><h3>My reports</h3></center>
<hr />
<div class="create-label">
    <a asp-action="Create" class="btn btn-info">Create report</a>
</div>
@if (Model.Any())
{
    <table id="dtMaintaskTable" class="table table-striped table-bordered" cellspacing="0" style="width:100%">
        <thead>
            <tr>
                <th class="th-sm">
                    @Html.DisplayNameFor(model => model.CarNumber)
                </th>
                <th class="th-sm">
                    @Html.DisplayNameFor(model => model.Violation)
                </th>
                <th class="th-sm">
                    @Html.DisplayNameFor(model => model.CreationTime)
                </th>
                <th class="th-sm">
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th class="th-sm">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <label>@item.CarNumber</label>
                    </td>
                    <td>
                        <label>@item.Violation</label>
                    </td>
                    <td>
                        <label>@item.CreationTime</label>
                    </td>
                    <td>
                        <label>@(statuses.FirstOrDefault(i => i.Value == item.StatusId.ToString()).Text)</label>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a href="#" data-toggle="modal" data-target="#deleteModal" data-item-id="@item.Id">| Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <center>No tasks found</center>
}
<div id="deleteModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure that you want to delete this report.</p>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" method="post">
                    <input name="id" type="hidden" id="confirmItemId" />
                    <button type="submit" class="btn btn-primary">Delete</button>
                </form>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $('#deleteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var itemId = button.data('item-id');

            var input = $(this).find('#confirmItemId');
            input.attr("value", itemId);
        })
        window.addEventListener("load", function () {
            $('#dtMaintaskTable').DataTable({
                "columnDefs": [{
                    "targets": 'no-sort',
                    "orderable": false,
                    "order": []
                }]
            });
            $('.dataTables_length').addClass('bs-select');
        });
    </script>
}